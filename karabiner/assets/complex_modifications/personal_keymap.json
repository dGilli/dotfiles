{
    "rules": [
        {
            "description": "Home Row Mod Keys (asdf) → Modifier Keys (⌘⌥⇧⌃)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        { "key_code": "f" }
                    ],
                    "to_if_held_down": [
                        { "key_code": "left_control" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        { "key_code": "d" }
                    ],
                    "to_if_held_down": [
                        { "key_code": "left_shift" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        { "key_code": "s" }
                    ],
                    "to_if_held_down": [
                        { "key_code": "left_alt" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        { "key_code": "a" }
                    ],
                    "to_if_held_down": [
                        { "key_code": "left_command" }
                    ]
                }
            ]
        },
        {
            "description": "Meh Key (⌃⌥⇧ or right ⌘)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "mod_meh",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "mod_meh",
                                "value": 0
                            }
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        { "key_code": "left_arrow" }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mod_meh",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        { "key_code": "down_arrow" }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mod_meh"
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        { "key_code": "up_arrow" }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mod_meh",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        { "key_code": "right_arrow" }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mod_meh",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "depr: Meh Key (⌃⌥⇧ or right ⌘) + hjkl → Arrow Keys (←↓↑→)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_option",
                                "left_shift",
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "left_arrow" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_option",
                                "left_shift",
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "down_arrow" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_option",
                                "left_shift",
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "up_arrow" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_option",
                                "left_shift",
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "right_arrow" }
                    ]
                }
            ]
        },
        {
            "description": "Fix grave_accent_and_tilde Key (`~)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "non_us_backslash" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "non_us_backslash",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "grave_accent_and_tilde" }
                    ]
                }
            ]
        }
    ]
}
